<body>
    <div id="tarjeta">
        <h1 id="texto">¬°Hola, mi hermosa prometida! üíç</h1>
        <div class="foto-marco">
            <img id="miFoto" src="/static/foto1.jpg" alt="Nuestra Foto">
        </div>
        <button onclick="cambiar()">Toca aqu√≠, amor üå∏</button>
    </div>

    <script>
        let indice = 0;
        const textoElem = document.getElementById('texto');
        const fotoElem = document.getElementById('miFoto');

        // RUTAS CORREGIDAS CON /static/
        const contenido = [
            { txt: "¬°Feliz feliz viernes, mi vida! Que tengas un d√≠a hermoso. ‚ú®", img: "/static/foto1.jpg" },
            { txt: "Quiero que sepas que siempre, siempre estoy contigo. ‚ù§Ô∏è", img: "/static/foto2.jpg" },
            { txt: "Siempre te voy a cuidar y a proteger, eres mi prioridad. üíç", img: "/static/foto3.jpg" },
            { txt: "Eres lo mejor que me ha pasado y siempre te elegir√© a ti. üåπ", img: "/static/foto4.jpg" }
        ];

        function cambiar() {
            indice++;
            if (indice >= contenido.length) indice = 0;
            fotoElem.style.opacity = 0; 
            setTimeout(() => {
                textoElem.innerText = contenido[indice].txt;
                fotoElem.src = contenido[indice].img;
                fotoElem.style.opacity = 1;
            }, 300);
        }

        const florEmojis = ['üå∏', 'üå∫', 'üåº', 'üå∑', 'üåπ', 'üíñ', '‚ú®'];
        setInterval(() => {
            const f = document.createElement('div');
            f.className = 'flor';
            f.innerText = florEmojis[Math.floor(Math.random() * florEmojis.length)];
            f.style.left = Math.random() * 100 + "vw";
            f.style.fontSize = Math.random() * 20 + 15 + "px";
            f.style.animationDuration = Math.random() * 4 + 5 + "s";
            document.body.appendChild(f);
            setTimeout(() => f.remove(), 6000);
        }, 300);
    </script>
